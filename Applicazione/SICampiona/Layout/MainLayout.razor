@using SICampiona.Common
@inherits LayoutComponentBase

<FluentLayout>
	<FluentHeader Style="background-color: white; color: #0c549e; aborder-bottom: 1px solid #ccc;">
		<img src="images/Arpal.png" height="50" style="margin-right:50px" />
		<FluentSpacer></FluentSpacer>
		<FluentLabel Typo="Typography.PageTitle">SICampiona</FluentLabel>
	</FluentHeader>
	<FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
		<FluentBodyContent>
			<ErrorBoundary>
				<ChildContent>
					<div class="content" style="margin-bottom:20px;">
						@Body
					</div>
					<FluentDialogProvider />
				</ChildContent>
				<ErrorContent Context="ex">
					<div>
						<h1>Si è verificato un errore</h1>
						<p>Comunicare le seguenti informazioni all'amministratore di sistema e provare a ricaricare l'applicazione</p>
						<p>Errore: @ex.Message</p>
						<p>Classe: @ex.TargetSite?.DeclaringType?.Name</p>
						<p>Metodo: @ex.TargetSite?.Name</p>
						<p>Eccezione interna: @ex.InnerException?.Message</p>
						<p>TargetSite: @ex.TargetSite</p>
						<p>Stack trace: @ex.StackTrace</p>
					</div>
				</ErrorContent>
			</ErrorBoundary>
		</FluentBodyContent>
	</FluentStack>
	<FluentFooter Style="background-color: white; color: #0c549e; border-top: 1px solid #ccc; font-size: 10px;">
		<FluentStack VerticalAlignment="VerticalAlignment.Center">
			<div>v.@Utils.Version()</div> <div><a target="_blank" href="https://www.arpal.liguria.it/privacy.html">Privacy</a></div>
		</FluentStack>
	</FluentFooter>
</FluentLayout>
