@if (PuntoDiPrelievo != null)
{
	<FluentStack Orientation="Orientation.Vertical">
		<FluentStack>
			<FluentLabel>
				<strong>Codice:</strong> @PuntoDiPrelievo.Codice
			</FluentLabel>
			<FluentLabel>
				<strong>Denominazione:</strong> @PuntoDiPrelievo.Denominazione
			</FluentLabel>
			<FluentLabel>
				<strong>Indirizzo:</strong> @PuntoDiPrelievo.Indirizzo
			</FluentLabel>
			<FluentLabel>
				<strong>Comune:</strong> @(PuntoDiPrelievo.Comune != null ? PuntoDiPrelievo.Comune.Denominazione : null)
			</FluentLabel>
			<FluentLabel>
				<strong>Coordinate:</strong> @(PuntoDiPrelievo.Coordinate != null ? $"Latitudine: {PuntoDiPrelievo.Coordinate.Latitudine} Longitudine: {PuntoDiPrelievo.Coordinate.Longitudine}" : null)
			</FluentLabel>
		</FluentStack>
	</FluentStack>
}

@code {
	[Parameter] public PuntoDiPrelievo PuntoDiPrelievo { get; set; }
}
