<FluentStack Orientation="Orientation.Vertical">
	<FluentStack>
		<FluentLabel>
			<strong>Analita:</strong> @Analita.Descrizione (@Analita.Codice)
		</FluentLabel>
	</FluentStack>
	<FluentStack>
		<FluentLabel>
			<u>Metodo:</u> @Analita.DescrizioneMetodo (@Analita.CodiceMetodo)
		</FluentLabel>
	</FluentStack>
	<FluentStack>
		<FluentLabel>
			<u>Pacchetto:</u> @Analita.DescrizionePacchetto (@Analita.CodicePacchetto)
		</FluentLabel>
	</FluentStack>
	<FluentStack>
		<FluentLabel>
			<u>Unità di misura:</u> @Analita.UnitaMisura
		</FluentLabel>
		<FluentLabel>
			<u>Valore limite:</u> @Analita.ValoreLimite
		</FluentLabel>
	</FluentStack>
</FluentStack>
@if (Analita.AggiuntoDaOperatore)
{
	<FluentLabel Color="Color.Warning">L'operatore ha aggiunto questo analita all'elenco.</FluentLabel>
}
@if (Analita.RimossoDaOperatore)
{
	<FluentLabel Color="Color.Warning">L'operatore ha rimosso questo analita dall'elenco.</FluentLabel>
}

@code {
	[Parameter] public Analita Analita { get; set; }
}