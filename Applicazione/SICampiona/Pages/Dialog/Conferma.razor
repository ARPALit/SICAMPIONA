@implements IDialogContentComponent<string>

<FluentDialogHeader>
	<FluentLabel Typo="Typography.Header">Richiesta di conferma</FluentLabel>
</FluentDialogHeader>

<FluentStack VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center">
	<FluentIcon Value="@(new Icons.Regular.Size28.QuestionCircle())" Color="@Color.Accent" />
	<FluentLabel Typo="Typography.Body">
		@Content
	</FluentLabel>
</FluentStack>

<FluentDialogFooter>
	<FluentButton Appearance="Appearance.Accent" OnClick="Si" Style="width:80px" >Sì</FluentButton>
	<FluentButton Appearance="Appearance.Accent" OnClick="No" Style="width:80px">No</FluentButton>
</FluentDialogFooter>

@code {

	[Parameter]
	public string Content { get; set; } = default!;

	[CascadingParameter]
	public FluentDialog Dialog { get; set; }

	private async Task Si ()
	{
		await Dialog.CloseAsync();
	}

	private async Task No()
	{
		await Dialog.CancelAsync();
	}
}
